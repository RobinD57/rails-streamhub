<div class="outer-box-form-signup">
  <div class="login-title">
    <h2>Log in</h2>
  </div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                label: false,
                input_html: { class: "login-input", placeholder: "email", autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                label: false,
                input_html: { class: "login-input", placeholder: "password", autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", { class: "submit-login-button" }%>
  </div>
<% end %>

  <div class="d-flex justify-content-between">
    <%= link_to "Sign up", new_registration_path(resource_name), {class: "signup-devise-link"} %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), {class: "forgotpass-devise-link"} %>
  </div>

  <div class="d-flex justify-content-center">
    <hr/>
  </div>


  <%= link_to user_twitch_omniauth_authorize_path, class: "stream-button" do %>
      <%= image_tag('button-twitch.png') %>
  <% end %>
  <%= link_to user_mixer_omniauth_authorize_path, class: "stream-button" do %>
      <%= image_tag('button-mixer.png') %>
  <% end %>

</div>

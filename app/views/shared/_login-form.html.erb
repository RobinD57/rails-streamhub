<div class="outer-box-form">
  <div class="login-title">
    <img src="https://res.cloudinary.com/dwtuoc2xm/image/upload/v1591093402/white_logo_transparent_background_uqnxhu.png" alt="Streamhub" class="form-logo">
    <h6>Find who is streaming, and where.</h6>
  </div>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                label: false,
                input_html: { class: "login-input", placeholder: "email", autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                label: false,
                input_html: { class: "login-input", placeholder: "password", autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", { class: "submit-login-button" }%>
  </div>
<% end %>

<div class="d-flex justify-content-between">
  <%= link_to "Sign up", new_registration_path(resource_name), {class: "signup-devise-link"} %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), {class: "forgotpass-devise-link"} %>
</div>


</div>

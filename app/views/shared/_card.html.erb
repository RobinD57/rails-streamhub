<div class="">
  <div class="main-container mt-5">
    <div class="row sorted">
      <%  @follows.each do |follow| %>
        <% if follow.identity.provider == "twitch" %>
          <%= render "shared/twitch_card", :follow => follow  %>
        <% else %>
          <%= render "shared/mixer_card", :follow => follow  %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
